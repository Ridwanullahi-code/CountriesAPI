generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  alpha2Code       String   @unique
  alpha3Code       String
  capital          String
  population       Int
  region           String
  subregion        String
  area             Int?
  flag             String
  timezones        String 
  borders          String 
  currencies       String 
  government       String 
  gdp              String
  language         String?  
  officialLanguage String?  
  climate          String? 
  terrain          String? 
  populationDensity Float? 
  governmentType   String? 
  officialCurrency String?
  nationalAnimal   String?
  nationalSport    String?
}